{
    "$defs": {
        "multiplierArray": {
            "type": "array",
            "items": {
                "type": "object",
                "additionalProperties": false,
                "required": [
                    "amount",
                    "name"
                ],
                "properties": {
                    "amount": {
                        "type": "number",
                        "minimum": 1,
                        "maximum": 1000
                    },
                    "name": {
                        "type": "string"
                    }
                }
            }
        }
    },
    "type": "array",
    "uniqueItems": true,
    "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
            "ptAddress",
            "chainId"
        ],
        "properties": {
            "ptAddress": {
                "type": "string",
                "pattern": "^0x[a-fA-F0-9]{40}$"
            },
            "chainId": {
                "type": "integer"
            },
            "multipliers": {
                "anyOf": [
                    {
                        "$ref": "multiplierArray"
                    },
                    {
                        "type": "object",
                        "additionalProperties": false,
                        "properties": {
                            "lp": {
                                "$ref": "multiplierArray"
                            },
                            "yt": {
                                "$ref": "multiplierArray"
                            }
                        }
                    }
                ]
            }
        }
    }
}
